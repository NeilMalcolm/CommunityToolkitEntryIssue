<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="using:CommunityToolkitEntryIssue"
             x:DataType="local:MainViewModel"
             x:Class="CommunityToolkitEntryIssue.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Button Text="Show Issue 1 Popup"
                    Command="{Binding ShowIssue1PopupCommand}"/>
            
            <Button Text="Show Issue 2 Popup"
                    Command="{Binding ShowIssue2PopupCommand}"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
